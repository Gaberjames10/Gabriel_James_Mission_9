@page
@model Gabriel_James.Pages.ShopModel
@{
}
@*Here I used the text lg center to center the header your cart*@
<h2 class="text-lg-center">Your Cart</h2>

<table class="table table-bordered table-striped d-xl-table">

    <thead>
        <tr>
            <th>Book</th>
            <th>Cost</th>
            <th>Quantity</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var i in Model.basket.Items)
            {
                <tr>
                    <td>@i.Book.Title</td>
                    <td>@i.Book.Price</td>
                    <td>@i.Quantity</td>
                    <td id="price">@(i.Quantity * i.Book.Price)</td>

                </tr>
            }
    </tbody>

    <tfoot>
@*I used the alert info class for the total row on the table that I made*@
        <tr class="alert-info">
            <td colspan="3">Total:</td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>


</table> 

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Exit</a>
</div>