@{
}

@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h3>
            @Model.Title
        </h3>

        <span class="badge bg-info" style="float:right">
            Price: $@Model.Price
        </span>

        <ul>
            <li>Book Author: @Model.Author</li>
            <li>Book Category: @Model.Category </li>
            <li>Price: @Model.Price</li>
            <li>Publisher: @Model.Publisher</li>
            <li>Page Count: @Model.PageCount</li>
            <li>Isbn: @Model.Isbn</li>
            <li>Book Classification: @Model.Classification</li>
        </ul>


    </div>

    <form method="post" asp-page="/Shop">


        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnURL" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text">
            <button type="submit"
                    class="btn btn-success btn-sm pull-right" style="float:right">
                Add To Cart
            </button>
        </span>
    </form>
</div>

