@{
}
@model BooksViewModel


<h1>Bookstore Page</h1>

@foreach (Book b in Model.Books)
{
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h3>
            @b.Title
        </h3>

        <ul>
            <li>Book Author: @b.Author</li>
            <li>Book Category: @b.Category </li>
            <li>Price: @b.Price</li>
            <li>Publisher: @b.Publisher</li>
            <li>Page Count: @b.PageCount</li>
            <li>Isbn: @b.Isbn</li>
            <li>Book Classification: @b.Classification</li>
        </ul>

        <br />
    </div>
</div>
            }
            <div page-model="@Model.PageInfo" page-action="Index"page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>
